# HabitFlow Backend Environment Configuration
# Copy this to .env and fill in with your values

# Django Settings
# For local development, use: core.settings.local
# For production deployment, use: core.settings.production
DJANGO_SETTINGS_MODULE=core.settings.local
DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# Database
DB_ENGINE=django.db.backends.postgresql
DB_NAME=habitflow
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS & Security
# Comma-separated hosts (include your domain in production)
ALLOWED_HOSTS=localhost,127.0.0.1
# Comma-separated origins (only your frontend domains in production)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
# Uncomment if running behind reverse proxy/HTTPS terminator
# SECURE_PROXY_SSL_HEADER=http_x_forwarded_proto,https

# JWT
JWT_SECRET_KEY=your-jwt-secret-key

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# AWS/Media Storage (optional)
AWS_STORAGE_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Monitoring (optional)
SENTRY_DSN=

# API Keys for Third-party Services
OPENAI_API_KEY=
